# =============================================================================
# Selenium MCP Server Configuration
# =============================================================================
# Copy this file to .env and adjust values as needed.
# All variables use the SELENIUM_MCP_ prefix.

# -----------------------------------------------------------------------------
# Server Settings
# -----------------------------------------------------------------------------
SELENIUM_MCP_HOST=0.0.0.0
SELENIUM_MCP_PORT=8000
SELENIUM_MCP_LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Selenium Grid Connection
# -----------------------------------------------------------------------------
SELENIUM_MCP_SELENIUM_GRID_URL=http://localhost:4444
SELENIUM_MCP_DEFAULT_BROWSER=chrome

# -----------------------------------------------------------------------------
# Session Management
# -----------------------------------------------------------------------------
SELENIUM_MCP_MAX_CONCURRENT_SESSIONS=10
SELENIUM_MCP_SESSION_MAX_LIFETIME_SECONDS=900
SELENIUM_MCP_SESSION_MAX_IDLE_SECONDS=300
SELENIUM_MCP_SWEEP_INTERVAL_SECONDS=60

# -----------------------------------------------------------------------------
# API Key Authentication (Optional)
# -----------------------------------------------------------------------------
# If not set, no authentication is required.
# Clients must include "Authorization: Bearer <api-key>" header when enabled.

# Option 1: Direct API key via environment variable
# SELENIUM_MCP_API_KEY=your-api-key-here

# Option 2: Read API key from file (for Docker secrets)
# SELENIUM_MCP_API_KEY_FILE=/run/secrets/selenium_mcp_api_key

# -----------------------------------------------------------------------------
# Content Limits
# -----------------------------------------------------------------------------
SELENIUM_MCP_DOM_MAX_CHARS=20000
SELENIUM_MCP_VISIBLE_TEXT_MAX_CHARS=20000

# -----------------------------------------------------------------------------
# Timeouts
# -----------------------------------------------------------------------------
SELENIUM_MCP_DEFAULT_WAIT_TIMEOUT_MS=10000
SELENIUM_MCP_PAGE_LOAD_TIMEOUT_SECONDS=30
SELENIUM_MCP_SCRIPT_TIMEOUT_SECONDS=30
SELENIUM_MCP_IMPLICIT_WAIT_SECONDS=0

# -----------------------------------------------------------------------------
# Security: Domain Allowlist (Optional)
# -----------------------------------------------------------------------------
# Comma-separated list of allowed domains. If empty, all domains are allowed.
# SELENIUM_MCP_ALLOWED_DOMAINS=example.com,httpbin.org
